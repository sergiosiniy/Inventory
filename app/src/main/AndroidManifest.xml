<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ua.kiev.farmaco.inventory">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_farmaco"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_farmaco"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="ua.kiev.farmaco.inventory.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="ua.kiev.farmaco.inventory.activities.Task"
            android:label="@string/task_label"/>
    </application>

</manifest>